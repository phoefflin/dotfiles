#
# void strange things like this: https://bbs.archlinux.org/viewtopic.php?id=112537
$include /etc/inputrc

# single tab will partially complete the word and show all possible completions
# if it is still ambiguous
set show-all-if-ambiguous on

# enable vi editing mode
set editing-mode vi

$if mode=vi

set show-mode-in-prompt on
# vi-ins-mode-string \ vi-cmd-mode-string
# Different cursor shapes for each mode
$if term=linux
    set vi-ins-mode-string \1\e[6 q\2
    set vi-cmd-mode-string \1\e[2 q\2
$else
    set vi-ins-mode-string \1\e[6 q\2
    set vi-cmd-mode-string \1\e[2 q\2
$endif

# reenable some key bindings from emacs mode

set keymap vi-command
# # these are for vi-command mode
Control-l: clear-screen
Control-a: beginning-of-line
Control-e: end-of-line

set keymap vi-insert
# these are for vi-insert mode
Control-l: clear-screen
Control-a: beginning-of-line
Control-e: end-of-line

$endif

